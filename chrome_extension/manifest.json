{
    "manifest_version": 2,
    "name": "Notion2HtmlEmail",
    "description": "Convert your notion page into HTML email.",
    "version": "1.0",
    "permissions" : ["tabs"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Click here!"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["beautify-html.js", "content.js"]
    }]
  }